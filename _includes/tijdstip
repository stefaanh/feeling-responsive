{% comment %}
   Required parameter 'timestamp': a timestamp
   Optionally parameter 'format': 
     one of 'lang' or 'kort' 
     or a date format as from Ruby strftime
  
   See also the includes "format/date" and "format/time"
  
{% endcomment %}
{%- case include.format -%}
	{%- when 'lang' -%}
		{%- capture tijdstip %}
			{% include format/date timestamp=include.timestamp format=site.date_longnames %}
			{% include format/time timestamp=include.timestamp format=include.format %}
		{% endcapture -%}
		{{ tijdstip | strip | capitalize }}
	{%- when 'kort' -%}
		{%- capture tijdstip %}
			{% include format/date timestamp=include.timestamp format=site.date_shortnames %}
			{% include format/time timestamp=include.timestamp format=include.format %}
		{% endcapture -%}
		{{ tijdstip | strip | capitalize }}
	{%- when nil -%}
		{%- capture tijdstip %}
			{% include format/date timestamp=include.timestamp %}
			{% include format/time timestamp=include.timestamp %}
		{% endcapture -%}
		{{ tijdstip | strip | capitalize }}
	{%- else -%}
		{{ include.timestamp | date: include.format }}
{%- endcase -%}
